{
  // Bật format tự động khi lưu
  "editor.formatOnSave": true,

  // Formatter mặc định theo ngôn ngữ
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // C# settings
  "csharp.format.enable": true,
  "csharp.format.indentationSize": 4,
  "csharp.format.newLineBeforeOpenBrace": "all",
  "csharp.format.spaceWithinMethodDeclarationParentheses": false,

  // Python settings (dùng Black)
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length",
    "88"
  ],

  // Prettier settings chung cho JS/TS/JSON/HTML/CSS
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 80
}
